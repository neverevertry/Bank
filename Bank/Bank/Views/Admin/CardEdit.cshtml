@model Card

<form asp-action="CardEdit" method="post">

    @if (Model != null)
    {
        <div class="form-group">
            <label asp-for="CardBalance"></label>
            <br />
            <input asp-for="CardBalance" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CardBanned"></label>
            <br />
            <input asp-for="CardBanned" class="form-control" />
        </div>
        <br />
        <div class="form-group">
            <label asp-for="CardNumb"></label>
            <br />
            <input asp-for="CardNumb" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    }
</form>