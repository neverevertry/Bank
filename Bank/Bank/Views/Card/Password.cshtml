@model string
<div class="text-black text-center"><h4>Password</h4></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Password" method="post">
    <div class="form-group offset-md-5 col-md-2 ">
        <input name="password" class="form-control" type="password" maxlength="4" />
        <br />
        <table class="main">
            <tr class="buttons">
                <td><input type="button" style="height:50px;width:50px" value="t" OnClick="password.value += 't'"></td>
                <td><input type="button" style="height:50px;width:50px" value="e" OnClick="password.value += 'e'"></td>
                <td><input type="button" style="height:50px;width:50px" value="s" OnClick="password.value += 's'"></td>
                <td><input type="button" style="height:50px;width:50px" value="t" OnClick="password.value += 't'"></td>
            </tr>
        </table>
    </div>
    <br />
    <div class="offset-md-5 col-md-2">
        <button type="submit" class="btn btn-primary">Enter</button>
        <button type="reset" class="btn btn-primary">Reset</button>
        </div>
</form>