@model string
<div class="bg-primary m-1 p-1 text-white"><h4>Password</h4></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Password" method="post">
    <div class="form-group">
        <input name="password" class="form-control" type="password" maxlength="4" />
        <table class="main">
            <tr class="buttons">
                <td><input type="button" value="t" OnClick="password.value += 't'"></td>
                <td><input type="button" value="e" OnClick="password.value += 'e'"></td>
                <td><input type="button" value="s" OnClick="password.value += 's'"></td>
                <td><input type="button" value="t" OnClick="password.value += 't'"></td>
            </tr>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Enter</button>
    <button type="reset" class="btn btn-primary">Reset</button>
</form>