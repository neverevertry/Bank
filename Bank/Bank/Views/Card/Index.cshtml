@model string

<div class="bg-primary m-1 p-1 text-white"><h4>Menu</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Index" method="post">
    <div class="form-group">
        <label>Input Card Nubmer</label>

        <input name="CardNumb" class="form-control" placeholder="1111-1111-1111-1111" />
    </div>
    <button type="submit" class="btn btn-primary">Enter</button>
    <button type="reset" class="btn btn-primary">Reset</button>
    <br />
    <table class="main">
        <tr class="display">
        </tr>
        <tr class="buttons">
            <td><input type="button" value="1" OnClick="CardNumb.value += '1'"></td>
            <td><input type="button" value="2" OnClick="CardNumb.value += '2'"></td>
            <td><input type="button" value="3" OnClick="CardNumb.value += '3'"></td>
        </tr>
        <tr class="buttons">
            <td><input type="button" value="4" OnClick="CardNumb.value += '4'"></td>
            <td><input type="button" value="5" OnClick="CardNumb.value += '5'"></td>
            <td><input type="button" value="6" OnClick="CardNumb.value += '6'"></td>
        </tr>
        <tr class="buttons">
            <td><input type="button" value="7" OnClick="CardNumb.value += '7'"></td>
            <td><input type="button" value="8" OnClick="CardNumb.value += '8'"></td>
            <td><input type="button" value="9" OnClick="CardNumb.value += '9'"></td>
        </tr>
        <tr class="buttons">
            <td><input type="button" value="0" OnClick="CardNumb.value += '0'"></td>
        </tr>
        </table>
</form> 

